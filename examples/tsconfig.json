{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "rootDir": "../",
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["es2015"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "../**/*.spec.ts", "../lib"]
}
