{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "skipLibCheck": true,
    "lib": ["es2015"]
  },
  "exclude": ["node_modules", "__tests__", "lib"]
}
